<!DOCTYPE html>
<html>
<head>
    <title>Trix Editor Test</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title mb-0">Trix Editor Test</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="mb-3">
                                <label for="test_description" class="form-label">Test Rich Text:</label>
                                <div class="rich-text-wrapper">
                                    <input id="test_description" type="hidden" name="test[description]" value="">
                                    <trix-editor input="test_description" placeholder="Type here to test the rich text editor..."></trix-editor>
                                </div>
                            </div>
                            <button type="button" class="btn btn-primary">Test Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded');
            console.log('Trix available:', typeof Trix !== 'undefined');
            console.log('Trix editor elements:', document.querySelectorAll('trix-editor').length);
        });
    </script>
</body>
</html>