<% content_for :title, "Registrace" %>

<div class="row justify-content-center">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow">
      <div class="card-header bg-primary text-white text-center">
        <h3 class="card-title mb-0">
          <i class="bi bi-person-plus me-2"></i>
          Registrace
        </h3>
      </div>
      
      <div class="card-body p-4">
        <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), 
                      local: true, class: "row g-3" do |f| %>
          
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="col-12">
            <%= f.label :email, "E-mailová adresa", class: "form-label fw-semibold" %>
            <%= f.email_field :email, 
                              autofocus: true, 
                              autocomplete: "email", 
                              class: "form-control form-control-lg",
                              placeholder: "váš@email.cz",
                              required: true %>
          </div>

          <div class="col-12">
            <%= f.label :password, "Heslo", class: "form-label fw-semibold" %>
            <% if @minimum_password_length %>
              <small class="text-muted">(minimálně <%= @minimum_password_length %> znaků)</small>
            <% end %>
            <%= f.password_field :password, 
                                autocomplete: "new-password", 
                                class: "form-control form-control-lg",
                                placeholder: "Zadejte heslo",
                                required: true %>
          </div>

          <div class="col-12">
            <%= f.label :password_confirmation, "Potvrzení hesla", class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation, 
                                autocomplete: "new-password", 
                                class: "form-control form-control-lg",
                                placeholder: "Zadejte heslo znovu",
                                required: true %>
          </div>

          <div class="col-12 pt-2">
            <%= f.submit "Zaregistrovat se", class: "btn btn-primary btn-lg w-100" %>
          </div>
        <% end %>
      </div>
      
      <div class="card-footer text-center bg-light">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
